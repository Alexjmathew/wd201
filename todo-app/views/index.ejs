<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Todo Manager</title>
    <link rel="stylesheet" href="/css/styles.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="container mx-auto px-4 py-8">
        <%- include('header') %>
        
        <% 
        // Initialize date variables at the top
        const today = new Date();
        today.setHours(0, 0, 0, 0);
        const tomorrow = new Date(today);
        tomorrow.setDate(tomorrow.getDate() + 1);
        %>
        
        <div class="max-w-4xl mx-auto mb-8">
            <form action="/todos" method="post" class="flex gap-2 mb-8">
                <input type="text" name="title" placeholder="What's next?" required 
                       class="flex-1 px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                <input type="date" name="dueDate" required 
                       class="px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                <button type="submit" 
                        class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 cursor-pointer">Add</button>
            </form>

            <!-- Overdue Section -->
            <div class="mb-6">
                <div class="flex items-center mb-4">
                    <h5 class="text-red-600 text-lg font-semibold">Overdue</h5>
                    <div id="count-overdue" class="bg-gray-100 py-1 px-3 ml-2 rounded">
                        <%= allTodos.filter(todo => {
                            const todoDate = new Date(todo.dueDate);
                            return todoDate < today && !todo.completed;
                        }).length %>
                    </div>
                </div>
                <table class="w-full border-collapse border border-gray-300">
                    <thead>
                        <tr class="bg-gray-100">
                            <th class="border border-gray-300 px-4 py-2 text-left">Status</th>
                            <th class="border border-gray-300 px-4 py-2 text-left">Title</th>
                            <th class="border border-gray-300 px-4 py-2 text-left">Due Date</th>
                            <th class="border border-gray-300 px-4 py-2 text-left">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% allTodos.forEach(function(todo) { 
                           const todoDate = new Date(todo.dueDate);
                           if (todoDate < today && !todo.completed) { %>
                            <tr>
                                <td class="border border-gray-300 px-4 py-2">
                                    <input type="checkbox" id="todo-checkbox-<%= todo.id %>" 
                                           <%= todo.completed ? "checked" : "" %> 
                                           onchange="toggleTodo(<%= todo.id %>)"
                                           class="w-4 h-4 text-blue-600 bg-gray-100 rounded border">
                                </td>
                                <td class="border border-gray-300 px-4 py-2">
                                    <label for="todo-checkbox-<%= todo.id %>" class="cursor-pointer">
                                        <%= todo.title %>
                                    </label>
                                </td>
                                <td class="border border-gray-300 px-4 py-2"><%= todo.dueDate %></td>
                                <td class="border border-gray-300 px-4 py-2">
                                    <button onclick="deleteTodo(<%= todo.id %>)" 
                                            class="text-red-600 hover:text-red-800">Delete</button>
                                </td>
                            </tr>
                        <% } }) %>
                    </tbody>
                </table>
            </div>

            <!-- Due Today Section -->
            <div class="mb-6">
                <div class="flex items-center mb-4">
                    <h5 class="text-green-600 text-lg font-semibold">Due Today</h5>
                    <div id="count-due-today" class="bg-gray-100 py-1 px-3 ml-2 rounded">
                        <%= allTodos.filter(todo => {
                            const todoDate = new Date(todo.dueDate);
                            todoDate.setHours(0, 0, 0, 0);
                            return todoDate.getTime() === today.getTime() && !todo.completed;
                        }).length %>
                    </div>
                </div>
                <table class="w-full border-collapse border border-gray-300">
                    <thead>
                        <tr class="bg-gray-100">
                            <th class="border border-gray-300 px-4 py-2 text-left">Status</th>
                            <th class="border border-gray-300 px-4 py-2 text-left">Title</th>
                            <th class="border border-gray-300 px-4 py-2 text-left">Due Date</th>
                            <th class="border border-gray-300 px-4 py-2 text-left">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% allTodos.forEach(function(todo) { 
                           const todoDate = new Date(todo.dueDate);
                           todoDate.setHours(0, 0, 0, 0);
                           if (todoDate.getTime() === today.getTime() && !todo.completed) { %>
                            <tr>
                                <td class="border border-gray-300 px-4 py-2">
                                    <input type="checkbox" id="todo-checkbox-<%= todo.id %>" 
                                           <%= todo.completed ? "checked" : "" %> 
                                           onchange="toggleTodo(<%= todo.id %>)"
                                           class="w-4 h-4 text-blue-600 bg-gray-100 rounded border">
                                </td>
                                <td class="border border-gray-300 px-4 py-2">
                                    <label for="todo-checkbox-<%= todo.id %>" class="cursor-pointer">
                                        <%= todo.title %>
                                    </label>
                                </td>
                                <td class="border border-gray-300 px-4 py-2"><%= todo.dueDate %></td>
                                <td class="border border-gray-300 px-4 py-2">
                                    <button onclick="deleteTodo(<%= todo.id %>)" 
                                            class="text-red-600 hover:text-red-800">Delete</button>
                                </td>
                            </tr>
                        <% } }) %>
                    </tbody>
                </table>
            </div>

            <!-- Due Later Section -->
            <div class="mb-6">
                <div class="flex items-center mb-4">
                    <h5 class="text-yellow-600 text-lg font-semibold">Due Later</h5>
                    <div id="count-due-later" class="bg-gray-100 py-1 px-3 ml-2 rounded">
                        <%= allTodos.filter(todo => {
                            const todoDate = new Date(todo.dueDate);
                            todoDate.setHours(0, 0, 0, 0);
                            return todoDate > today && !todo.completed;
                        }).length %>
                    </div>
                </div>
                <table class="w-full border-collapse border border-gray-300">
                    <thead>
                        <tr class="bg-gray-100">
                            <th class="border border-gray-300 px-4 py-2 text-left">Status</th>
                            <th class="border border-gray-300 px-4 py-2 text-left">Title</th>
                            <th class="border border-gray-300 px-4 py-2 text-left">Due Date</th>
                            <th class="border border-gray-300 px-4 py-2 text-left">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% allTodos.forEach(function(todo) { 
                           const todoDate = new Date(todo.dueDate);
                           todoDate.setHours(0, 0, 0, 0);
                           if (todoDate > today && !todo.completed) { %>
                            <tr>
                                <td class="border border-gray-300 px-4 py-2">
                                    <input type="checkbox" id="todo-checkbox-<%= todo.id %>" 
                                           <%= todo.completed ? "checked" : "" %> 
                                           onchange="toggleTodo(<%= todo.id %>)"
                                           class="w-4 h-4 text-blue-600 bg-gray-100 rounded border">
                                </td>
                                <td class="border border-gray-300 px-4 py-2">
                                    <label for="todo-checkbox-<%= todo.id %>" class="cursor-pointer">
                                        <%= todo.title %>
                                    </label>
                                </td>
                                <td class="border border-gray-300 px-4 py-2"><%= todo.dueDate %></td>
                                <td class="border border-gray-300 px-4 py-2">
                                    <button onclick="deleteTodo(<%= todo.id %>)" 
                                            class="text-red-600 hover:text-red-800">Delete</button>
                                </td>
                            </tr>
                        <% } }) %>
                    </tbody>
                </table>
            </div>

            <!-- Completed Section -->
            <div class="mb-6">
                <div class="flex items-center mb-4">
                    <h5 class="text-blue-600 text-lg font-semibold">Completed</h5>
                    <div id="count-completed" class="bg-gray-100 py-1 px-3 ml-2 rounded">
                        <%= allTodos.filter(todo => todo.completed).length %>
                    </div>
                </div>
                <table class="w-full border-collapse border border-gray-300">
                    <thead>
                        <tr class="bg-gray-100">
                            <th class="border border-gray-300 px-4 py-2 text-left">Status</th>
                            <th class="border border-gray-300 px-4 py-2 text-left">Title</th>
                            <th class="border border-gray-300 px-4 py-2 text-left">Due Date</th>
                            <th class="border border-gray-300 px-4 py-2 text-left">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% allTodos.forEach(function(todo) { 
                           if (todo.completed) { %>
                            <tr>
                                <td class="border border-gray-300 px-4 py-2">
                                    <input type="checkbox" id="todo-checkbox-<%= todo.id %>" 
                                           <%= todo.completed ? "checked" : "" %> 
                                           onchange="toggleTodo(<%= todo.id %>)"
                                           class="w-4 h-4 text-blue-600 bg-gray-100 rounded border">
                                </td>
                                <td class="border border-gray-300 px-4 py-2">
                                    <label for="todo-checkbox-<%= todo.id %>" class="cursor-pointer">
                                        <%= todo.title %>
                                    </label>
                                </td>
                                <td class="border border-gray-300 px-4 py-2"><%= todo.dueDate %></td>
                                <td class="border border-gray-300 px-4 py-2">
                                    <button onclick="deleteTodo(<%= todo.id %>)" 
                                            class="text-red-600 hover:text-red-800">Delete</button>
                                </td>
                            </tr>
                        <% } }) %>
                    </tbody>
                </table>
            </div>
        </div>

        <%- include('footer') %>
    </div>

    <script>
        function toggleTodo(id) {
            const checkbox = document.getElementById(`todo-checkbox-${id}`);
            const completed = checkbox.checked;

            fetch(`/todos/${id}`, {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ completed: completed })
            })
            .then(response => {
                if (response.ok) {
                    window.location.reload();
                } else {
                    checkbox.checked = !completed; // Revert checkbox if request failed
                }
            })
            .catch(error => {
                console.error('Error:', error);
                checkbox.checked = !completed; // Revert checkbox if request failed
            });
        }

        function deleteTodo(id) {
            if (confirm('Are you sure you want to delete this todo?')) {
                fetch(`/todos/${id}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => {
                    if (response.ok) {
                        window.location.reload();
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                });
            }
        }
    </script>
</body>
</html>
